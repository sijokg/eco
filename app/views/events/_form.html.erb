<%= simple_form_for @event, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@event[:name]) %>
  <%= f.input :title %>
  <%= error_span(@event[:title]) %>
  <%= f.input :description %>
  <%= error_span(@event[:description]) %>
  <%= f.input :from_date , as: :datetime, start_year: Date.today.year,
                              end_year: Date.today.year + 1%>
  <%= error_span(@event[:from_date]) %>
  <%= f.input :to_date , as: :datetime, start_year: Date.today.year,
                              end_year: Date.today.year + 1%>
  <%= error_span(@event[:to_date]) %>
  <%= f.input :image, as: :file %>
  <%= error_span(@event[:image]) %>
  <%= f.input :status_id %>
  <%= error_span(@event[:status_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                events_path, :class => 'btn btn-default' %>
<% end %>
